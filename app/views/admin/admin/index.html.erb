<div class="card" >
  <div class="card-header">
    All Links
  </div>
  <ul class="list-group ">
    <li class="list-group-item"><%= link_to "products", admin_products_path %></li>
    <li class="list-group-item"><%= link_to "Users", admin_users_path %></li>
    <li class="list-group-item"><%= link_to "Foot_prints", admin_foot_prints_path %></li>
  </ul>
</div>

<br>
<h2 class="text-center">Admin Index</h2>
<div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Prenom</th>
          <th scope="col">Nom</th>
          <th scope="col">Email</th>
          <th scoe="col">Montrer</th>
          <th scoe="col">Supprimer</th>


        </tr>
      </thead>
      <tbody>
    <hr>
      <h4>Last <%= @user.count %> user</h4>
    <hr>
<% @user.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= link_to "more" , admin_user_path(user.id) %></td>
          <td><%= link_to "Delete", admin_user_path(user.id),data: { :confirm => "Are you sure?"}, :method => :delete %></td>
        </tr>
        <tr>
        <%end%>
      </tbody>
    </table>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Titre</th>
          <th scope="col">Resultat</th>
          <th scope="col">Montrer</th>
          <th scope="col">Supprimer</th>


        </tr>
      </thead>
      <tbody>


    <hr>
      <h4>Last <%= @foot_print.count %> user</h4>
    <hr>
<% @foot_print.each do |foot| %>
        <tr>
          <td> <%= foot.product.title %> </td>
          <td><%= foot.result %></td>
          <td><%= link_to "more", admin_foot_print_path(foot) %></td>
          <td><%=link_to "Delete", admin_foot_print_path(foot), data: {:confirm => "Are you sure?"}, :method => :delete  %></td>
        </tr>
<% end %>
        <tr>
      </tbody>
    </table>
</div>
