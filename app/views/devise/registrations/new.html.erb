
<div class="signup-page">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
   
    <div class="page-header section-image">
        <div class="page-header-image" style="background-image:url(./assets/img/ciel/ciel.jpg)"></div>
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 ml-auto mr-auto">
                        <div class="info info-horizontal">
                            <div class="icon icon-primary">
                                <i class="now-ui-icons media-2_sound-wave"></i>
                            </div>
                            <div class="description">
                                <h5 class="info-title">Calculer l'impact de vos livraisons</h5>
                                <p class="description">
                                    En créant un compte, vous avez accés à notre algorithme qui calcul l'impact carbonne de vos livraisons.</p>
                            </div>
                        </div>
                        <div class="info info-horizontal">
                            <div class="icon icon-primary">
                                <i class="now-ui-icons media-1_button-pause"></i>
                            </div>
                            <div class="description">
                                <h5 class="info-title">Accés à nos bases de données</h5>
                                <p class="description">
                                    En créant un compte, vous serrez informé sur l'avancement de nos bases de données.
                                </p>
                            </div>
                        </div>
                        <div class="info info-horizontal">
                            <div class="icon icon-info">
                                <i class="now-ui-icons users_single-02"></i>
                            </div>
                            <div class="description">
                                <h5 class="info-title">Une communauté </h5>
                                <p class="description">
                                    A terme, nous shouaitons developper une communauté, rejoignez la communauté!
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mr-auto">
                        <div class="card card-signup">
                            <div class="card-body">
                                <h4 class="card-title text-center">Inscription</h4>
                                
                                <form class="form" method="" action="">

                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="now-ui-icons users_circle-08"></i></span>
                                        </div>
                                         <%= f.text_field :first_name,class:"form-control", placeholder:"Prénom"%>
                                        </div>
                                        
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="now-ui-icons users_single-02"></i></span>
                                        </div>
                                        <%= f.text_field :last_name ,class:"form-control", placeholder:"Nom de famille"%>
                                    </div>
                                   

                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="now-ui-icons users_single-02"></i></span>
                                        </div>
                                        <%= f.text_field :zip_code ,class:"form-control", placeholder:"code postale"%>
                                    </div>

                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="now-ui-icons location_world"></i></span>
                                        <% @cities_france = ["Paris", "Marseille", "Lyon", "Toulouse", "Nice", "Nantes", "Strasbourg", "Montpellier", "Bordeaux", "Lille", "Rennes", "Reims", "Le Havre", "Cergy-Pontoise", "Saint-Etienne", "Toulon", "Angers", "Grenoble", "Dijon", "Nimes", "Aix-en-Provence", "Saint-Quentin-en-Yvelines", "Brest", "Le Mans", "Amiens", "Tours", "Limoges", "Clermont-Ferrand", "Villeurbanne", "Besancon", "Orleans", "Metz", "Rouen", "Mulhouse", "Perpignan", "Caen", "Boulogne-Billancourt", "Nancy", "Argenteuil", "Saint-Denis", "Roubaix", "Tourcoing", "Montreuil", "Avignon", "Asnieres-sur-Seine", "Nanterre", "Poitiers", "Versailles", "Courbevoie"] %>
                                        <%= f.select :town , @cities_france , { class: "form-control" } , style:"width:auto;"%>
                                        </div>

                                    </div>
                                    <div class="input-group">
                                        <%# <div class="input-group-prepend"> %>
                                            <%# <span class="input-group-text"><i class="now-ui-icons users_single-02"></i></span> %>
                                    <%# </div> %>
                                        <%# <%= f.text_field :country ,class:"form-control", placeholder:"Nom de famille"%> 
                                        <%= f.hidden_field :country, value:"France" , class:"form-control"%>

                                    </div>

                                    
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="now-ui-icons ui-1_email-85"></i></span>
                                        </div>


                                          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control", placeholder:"Email"%>
                                        </div>
                                        
                                         <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="now-ui-icons ui-1_lock-circle-open"></i></span>
                                        </div>
                                         
                                          
                                          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Mot de passe"%>
                                        </div>


                                         <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="now-ui-icons ui-1_lock-circle-open"></i></span>
                                        </div>
                                         
                                          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control",placeholder:"Confirmation mot de passe" %>
                                        </div>
                                    
                                    
                                    
                                    <div class="card-footer text-center">

                                        
                                        
                                          <%= f.submit "Vous inscrire", class:"btn btn-primary btn-round btn-lg" %>
                                        </div>
                                     
                                    
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%end%>
        
    </div>
</div>




