<div class="container col-md-4" style="margin-top: 8%">

<h2>Modifier le profil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-control ">
    <%= f.label :Prénom %><br />
  <%= f.text_field :first_name,class:"form-control", placeholder:"Prénom"%>
  </div>

  <div class="form-control"">
    <%= f.label :Nom%><br />
  <%= f.text_field :last_name ,class:"form-control", placeholder:"Nom de famille"%>
  </div>

      <div class="form-control"">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Mot de passe actuelr: <%= resource.unconfirmed_email %></div>
  <% end %>


   
  <div class="form-control">
    <%= f.label :"Mot de passe" %> <i>(laissez vide si vous ne voulez pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>

    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> charactères minimum</em>
    <% end %>
  </div>

  <div class="form-control">
    <%= f.label :"Confirmation mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>


  <div class="form-control">
    <%= f.label :"Mot de passe actuel" %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>

  </div>

  <div class="actions">
    <%= f.submit "Modifier" %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<p>Pas content? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes vous sur ?" }, method: :delete %></p>

<%= link_to "Retour", :back %>
</div>
