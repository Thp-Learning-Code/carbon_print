      </input>
    </div>


    <div class="form-control">
       <%= form.label :zip_code %>
      <input type="text" value="" placeholder="Votre code postal" class="form-control" <%= form.number_field :zip_code %>



      </input>
    </div>


    <div class="form-control">
      <%= form.label :town %>
      <input type="text" value="" placeholder="Votre ville" class="form-control" <%= form.text_field :town %>



      </input>
    </div>

    <div class="form-control">
      <%= form.label :country %>
      <input type="text" value="" placeholder="Pays" class="form-control" <%= form.text_field :country %>


      </input>
    </div>

      <button type="form.submit" class="btn btn-primary btn-round" >

        Let's go
      </button>

      </div>

</div>

<% end %>
