      <thead>
        <tr>
          <th scope="col">Prenom</th>
          <th scope="col">Nom</th>
          <th scope="col">Email</th>
        

        </tr>
      </thead>
      <tbody>
    
        <tr>
          <td><%= @user.first_name %></td>
          <td><%= @user.last_name %></td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
      </tbody>
    </table>



<br><br><br>
<h2>result des tests</h2>
<h5>
<hr>
<%if @foot_print.count == 0  || @foot_print.count == 1%>
<%= "l'utilisateur a effectué #{@foot_print.count} test" %>
<%else%>
<%= "l'utilisateur a effectué #{@foot_print.count} tests" %>

<%end%>
<hr>
</h5>
<% if @foot_print.count > 0 %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">result</th>
           <th scope="col">voir</th>
          <th scope="col">delete</th>
            
        </tr>
      </thead>
      <tbody>
  
<% @foot_print.each do |foot| %>
        <tr>
          <td> <%= foot.product.title %> </td>
          <td><%= foot.result %></td>
          <td><%= link_to "voir", footprint_path(foot.id)  %></td>
          <td><%= link_to "Delete", footprint_path(foot.id), method: :delete, data:{confirm: 'Are you sure?'}   %></td>
        </tr>
<% end %>
        <tr>
      </tbody>
    </table>
<%end%>
<div id="menu">
<% if user_signed_in? && current_user.id == @user.id %>
<%= link_to "Modifier le profil", edit_user_registration_path(current_user.id), class:"nav-link"%>


<%end%>
</div>





